{
  "name": "BentleyWebOptimization",
  "description": "ShowBentleyWebsiteforme",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "storage",
    "declarativeContent"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "32": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://prgsrv.bentley.com/Build.Schedule.Monitor.aspx"],
      "js": ["myscript.js"],
      "run_at":"document_start"
    }
    ]
}