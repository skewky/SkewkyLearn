{
  "name": "BentleyWebsiteOptimization",
  "description": "Show Optimizated BentleyWebsite For Me",
  "version": "1.0",
  "manifest_version": 2,
  "web_accessible_resources": [
    "/css/*.css",
    "/js/*.js"],
  "permissions": [
    "tabs",
    "storage",
    "declarativeContent"
  ],
  "options_page": "/html/options.html",
  "background": {
    "scripts": [
      "/js/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "/html/popup.html",
    "default_icon": {
      "16": "/images/skewkyBentleyWeb.png",
      "32": "/images/skewkyBentleyWeb.png",
      "48": "/images/skewkyBentleyWeb.png",
      "128": "/images/skewkyBentleyWeb.png"
    }
  },
  "icons": {
    "16": "/images/skewkyBentleyWeb.png",
    "32": "/images/skewkyBentleyWeb.png",
    "48": "/images/skewkyBentleyWeb.png",
    "128": "/images/skewkyBentleyWeb.png"
  },
  "content_scripts": [
    {
      "matches": ["http://prgsrv.bentley.com/Build.Schedule.Monitor.aspx"],
      "js": ["/js/buildMonitor.js"],
      "run_at":"document_start"
    },
    {
      "matches": ["http://prgsrv.bentley.com/Build.Schedule.aspx"],
      "js": ["/js/buildSchedule.js"],
      "run_at":"document_start"
    }
    ]
}