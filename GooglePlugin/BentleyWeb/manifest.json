{
    "name": "BentleyWebOptimization",
    "description" : "ShowBentleyWebsiteforme",
    "version": "1.0",
    "manifest_version": 2,
	"permissions":
	[
		"contextMenus", // 右键菜单
		"tabs", // 标签
		"storage", // 插件本地存储
		"http://*/*", // 可以通过executeScript或者insertCSS访问的网站
		"https://*/*" // 可以通过executeScript或者insertCSS访问的网站
	],
	"options_page": "options.html",
	"background": {
      "scripts": ["background.js"],
      "persistent": false
    },
	//"browser_action": {
   //   "default_popup": "popup.html",
	//  "default_icon":{
   //     "16": "images/logo.png",
   //     "32": "images/logo.png",
   //     "48": "images/logo.png",
   //     "128": "images/logo.png"
  //    }
  //  },
	"page_action": {
      "default_popup": "popup.html",
	  "default_icon":{
        "16": "images/logo.png",
        "32": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
      }
    },
	"content_scripts": [
    {
      "matches": ["baidu.com"],
      "js": ["myscript.js"],
      "run_at": ["document_start"]
    }
    ],
 
}